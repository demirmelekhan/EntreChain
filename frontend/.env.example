# EntreChain Frontend Environment Variables
# Copy this file to .env.local and update with your values

# Deployed Soroban contract address (update after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS=your_contract_address_here

# Stellar network (TESTNET or PUBLIC)
NEXT_PUBLIC_STELLAR_NETWORK=TESTNET

# Stellar Network Configuration for Passkeys
NEXT_PUBLIC_STELLAR_RPC_URL=https://soroban-testnet.stellar.org
NEXT_PUBLIC_STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Wallet Configuration for Passkeys
NEXT_PUBLIC_WALLET_WASM_HASH=your_wallet_wasm_hash_here
NEXT_PUBLIC_NATIVE_CONTRACT_ADDRESS=your_native_contract_address_here

# Server-side only (not prefixed with NEXT_PUBLIC_)
PRIVATE_FUNDER_SECRET_KEY=your_private_funder_secret_key_here

# Mercury Configuration (if using)
MERCURY_BACKEND_ENDPOINT=https://api.mercurydata.app
MERCURY_EMAIL=your_mercury_email_here
MERCURY_PASSWORD=your_mercury_password_here
